#ifndef GICHT_VERSION_H_
#define GICHT_VERSION_H_

/* this is just a convenince macro */
#define GICHT_VERSION(major, minor, patch) \
	(major * 10000 + minor * 100 + patch)
	
#define GICHT_VERSION_MAJOR @GICHT_VERSION_MAJOR@
#define GICHT_VERSION_MINOR @GICHT_VERSION_MINOR@
#define GICHT_VERSION_PATCH @GICHT_VERSION_PATCH@
#define GICHT_VERSION_STATE @GICHT_VERSION_STATE@

#define GICHT_VERSION_STR \
	"@GICHT_VERSION_MAJOR@.@GICHT_VERSION_MINOR@.@GICHT_VERSION_PATCH@-@GICHT_VERSION_STATE@"
#define GICHT_VERSION_NUM \
	GICHT_VERSION(GICHT_VERSION_MAJOR, GICHT_VERSION_MINOR, GICHT_VERSION_PATCH)

#endif
